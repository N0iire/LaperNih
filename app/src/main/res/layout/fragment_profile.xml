<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textSize="32sp"
        android:gravity="center"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_image"
        android:layout_below="@+id/profile_title"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="250dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:elevation="8dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/image_me"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Reichan Muhammad Maulana"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/profile_image"
        />
    <TextView
        android:id="@+id/profile_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="10119120"
        android:layout_below="@+id/profile_name"
        />
    <TextView
        android:id="@+id/profile_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="IF-3"
        android:layout_below="@id/profile_nim"
        />
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="reichan.muhammad@gmail.com"
        android:layout_below="@id/profile_kelas"
        />

</RelativeLayout>