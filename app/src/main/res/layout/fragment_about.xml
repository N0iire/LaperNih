<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textSize="32sp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/about_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/image_logo"
        android:layout_below="@+id/about_title"/>

    <TextView
        android:id="@+id/about_information1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Aplikasi ini merupakan aplikasi personal yang dapat dimanfaatkan untuk menambah produktifitas"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/about_image"
        />
    <TextView
        android:id="@+id/about_information2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Aplikasi ini dibangun menggunakan Java, dan Android Studio"
        android:layout_below="@+id/about_information1"
        />
</RelativeLayout>